<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <div>
        <h1>My Blog</h1>
        <a href="/create-post" id="newPostBtn">New Post</a>
      </div>

      <ul id="postList">
        <% posts.forEach(post => { %>

        <li>
          <h2><%= post.title %></h2>
          <small><%= post.date %></small>
          <p><%= post.content %></p>
          <small>By :<%= post.author %></small><br />
          <div>
            <a class="edit" href="/edit-post/<%= post.id %>">Edit</a>
            <a class="Delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
